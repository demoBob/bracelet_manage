.topic{
  width: 100%;
  height: 100%;
  font-size: 16px;

  /deep/ .el-button{
    font-size: 16px;
  }

  .top{
    width: 100%;
    height: 100px;
    /deep/ .el-button{
      float: left;
      margin-left: 20px;
      width: 140px;
      height: 42px;
      background-color: #0095C6;
      margin-top: 35px;
      font-size: 18px;
    }

    .code{
      float: right;
      margin:35px 80px 0px 0px;
      width:500px;
      /deep/ .el-input{
        width: 250px;
        font-size: 16px;         

        .el-input__inner{
          height: 42px;
          color: black;
        }
      }
    }

    .seach{
      float: right;
      width: 100px;
      margin:0px 0px 0px 10px;
    }
  }

  .listTable{
    width: 98%;
    margin: 0 auto;

    /deep/ .el-table{
       font-size: 16px;
       color: black;

       .headerRow{
         background-color: #f5f7fa;
         border: 1px solid #ebeef5;
         color: #909399;
         height: 60px;
       }

       .el-table__empty-text{
         color: black;
       }

        img{
          width: 50px;
          height: 50px;
        }

        th{
          text-align: center;
        }

        td{
          text-align: center;
          border: 1px solid #ebeef5;
          padding: 3px 0px 0px;
        }
       
    }
  }

  /deep/ .el-dialog{
    width: 30%;

    .table{
      width: 100%;
      height: 400px;
      .haved{
        margin-top: 20px;
      }
      .header{
        width: 100%;
        display: flex;
        justify-content: space-between;
        height: 50px;
        line-height: 50px;
        .btn{
          width: 150px;
          height: 40px;
        }
      }

      .articleimg{
        width: 50px;
        height: 50px;
      }
    }

    .el-button{
      background-color: #0095C6;
    }

    .el-input{
      width: 300px;
      
      .el-input__inner{
        color: black;
        font-size: 16px;
      }
    }

    .el-dialog__title{
      color: black;
    }

    .el-form-item__label{
      font-size: 16px;
      color: black;
    }

    .btn{
      width: 150px;
    }

    .el-dialog__body{
      font-size: 16px ;
      color: black;     
    }

    // .el-select-dropdown__item{
    //   font-size: 16px;
    //   color: black;
    // }
  
  }
  
  
}